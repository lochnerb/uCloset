        function () {

            //////////////////////////////////////
            // Required to close body gap - BEGIN
            //////////////////////////////////////
            var bdyHght = $('#dvBodyContent').height();
            $('#dvBodyContent').height(bdyHght + 10);
            //////////////////////////////////////
            // Required to close body gap - END
            //////////////////////////////////////

            var myMerchantID = "";
            var myActiveLink = "MerchantID_"
            myMerchantID = $.cookie('MerchantID');

            if (myMerchantID == null)
                myMerchantID = "0";

            myActiveLink = "#" + myActiveLink + myMerchantID;

            $(myActiveLink).css('text-decoration', 'underline');
            $(myActiveLink).css("font-weight", "Bold");
        }
    );

    function LoadMerchant(lmMerchantID)
    {
        $.cookie("MerchantID", lmMerchantID);

        window.location.href = window.location.href;
    }
</script>

